<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\HelloWorld\Persistence"
          package="src.Orm.Zed.HelloWorld.Persistence">
    <table name="pyz_hello_world" idMethod="native" allowPkInsert="true"
           phpName="PyzHelloWorld">
        <column name="id" required="true" type="INTEGER"
                primaryKey="true" autoIncrement="true"/>
        <column name="name" required="true" type="VARCHAR" size="255"/>
        <column name="message" required="true" type="VARCHAR" size="255"/>

        <id-method-parameter value="pyz_helloworld_pk_seq"/>
    </table>
</database>
